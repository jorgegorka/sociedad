= render 'shared/header', title: t('resources.title') do
  = render 'shared/button_new',  destination: new_resource_path, title: t('resources.newTitle')
- if @resources.any?
  .mt-6.p-6.bg-white.shadow.sm:rounded-lg
    %table.mt-6.min-w-full.table-stripped
      %thead
        %tr
          %th{class: th_class.render}
            = t 'resources.name'
          %th{class: th_class.render}
            = t 'resources.maxCapacity'
          %th{class: th_class.render}
      %tbody
        = render partial: 'resources/resource', collection: @resources
- else
  .mt-6
    = render 'shared/notification', {title: t('resources.noResources')} do
      .mt-4
        .-mx-2.flex{class: "-my-1.5"}
          = link_to t('resources.addFirst'), new_resource_path, class: "px-2 py-1.5 rounded-md text-sm leading-5 font-medium text-blue-800 hover:bg-blue-100 focus:outline-none focus:bg-blue-100 transition ease-in-out duration-150", target: '_top'
