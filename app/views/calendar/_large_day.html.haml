%div{class: "relative py-2 px-3 min-h-24 #{day[:day] == Date.current ? "bg-blue-100" : "bg-gray-50 text-gray-500"}"}
  .flex.justify-between.items-center
    %time{class: "#{"flex h-6 w-6 items-center justify-center rounded-full bg-indigo-600 font-semibold text-white" if day[:day] == Date.current}", datetime: "#{day.to_s}"}
      = day[:day].strftime('%d')
  %ol.mt-2
    = render partial: 'main/calendar/large_show_event', collection: day[:bookings], as: :result
    = turbo_frame_tag "calendar_day_#{day[:day].strftime('%m_%d')}"
