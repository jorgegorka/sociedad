%div{class: "flex.h-14.flex-col.py-2.px-3.hover:bg-gray-100.focus:z-10 #{ day[:day] == Date.current ? "text-indigo-600 font-semibold " : "text-gray-500 " }"}
  = link_to calendar_events_url(date: day[:day]), data: { turbo_frame: 'calendar_events_mid' } do
    %time{class: "ml-auto bg-gray-50 #{ day[:day] == Date.current ? "flex h-6 w-6 items-center text-white justify-center rounded-full bg-indigo-600 " : "flex h-6 w-6 items-center text-white justify-center rounded-full bg-green-400 " }"}= day[:day].strftime('%d')
    - total_results = day[:bookings]
    - if total_results&.any?
      = render partial: 'mid_show_event', collection: total_results, as: :result
