= render 'shared/header', title: t('admin.scheduleCategories.title') do
  = render 'shared/button_new',  destination: new_admin_schedule_category_path, title: t('admin.scheduleCategories.newTitle')
- if @schedule_categories.any?
  %table.mt-6.min-w-full.table-stripped
    %thead
      %tr
        %th{class: th_class.render}
          = t 'admin.scheduleCategories.name'
        %th{class: th_class.render}
          = t 'admin.scheduleCategories.colour'
        %th{class: th_class.render}
    %tbody
      = render partial: 'admin/schedule_categories/schedule_category', collection: @schedule_categories
- else
  .mt-6
    = render 'shared/notification', {title: t('admin.scheduleCategories.noCategories')} do
      .mt-4
        .-mx-2.flex{class: "-my-1.5"}
          = link_to t('admin.scheduleCategories.addFirst'), new_admin_schedule_category_path, class: "px-2 py-1.5 rounded-md text-sm leading-5 font-medium text-blue-800 hover:bg-blue-100 focus:outline-none focus:bg-blue-100 transition ease-in-out duration-150", target: '_top'
