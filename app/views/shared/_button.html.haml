.flex.justify-between.items-center
  %span.inline-flex.rounded-md.shadow-sm
    = link_to cancel_text, cancel_url, class: "cancel-button py-2 px-4 border border-gray-300 rounded-md text-sm leading-5 font-medium text-gray-700 hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-50 active:text-gray-800 transition duration-150 ease-in-out"
  %span.ml-3.inline-flex.rounded-md.shadow-sm
    %button.inline-flex.justify-center.py-2.px-4.border.border-transparent.text-sm.leading-5.font-medium.rounded-md.text-white.bg-green-600.hover:bg-green-500.focus:outline-none.focus:border-green-700.focus:shadow-outline-green.active:bg-green-700.transition.duration-150.ease-in-out{type: "submit"}
      = button_text
